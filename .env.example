# =============================================================================
# Nurturing Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Nurturing API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_CL

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=nurturing
DB_USERNAME=postgres
DB_PASSWORD=

# Cloud SQL (para producci贸n en GCP)
# DB_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# DB_SOCKET=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS=12

# JWT Configuration (si usas JWT)
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:5173,127.0.0.1,127.0.0.1:8000

# -----------------------------------------------------------------------------
# Session & Cache
# -----------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=nurturing_

# -----------------------------------------------------------------------------
# Queue
# -----------------------------------------------------------------------------
QUEUE_CONNECTION=database

# Para producci贸n con Cloud Tasks (opcional)
# QUEUE_CONNECTION=cloudtasks
# CLOUD_TASKS_QUEUE=nurturing-queue
# CLOUD_TASKS_LOCATION=southamerica-east1

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Para Cloud Run (logs van a stderr)
# LOG_CHANNEL=stderr

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------

# Athena Campaign (Email Service)
ATHENACAMPAIGN_BASE_URL=https://apimail.athenacampaign.com
ATHENACAMPAIGN_API_KEY=

# SMS Service
SMS_API_TOKEN=
SMS_API_URL=

# -----------------------------------------------------------------------------
# Mail (para notificaciones del sistema)
# -----------------------------------------------------------------------------
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=local

# Google Cloud Storage (para producci贸n)
# FILESYSTEM_DISK=gcs
# GOOGLE_CLOUD_STORAGE_BUCKET=nurturing-files

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Producci贸n
# CORS_ALLOWED_ORIGINS=https://app.nurturing.segal.cl,https://qa.nurturing.segal.cl

# -----------------------------------------------------------------------------
# Cost Configuration
# -----------------------------------------------------------------------------
COSTO_EMAIL=1
COSTO_SMS=11

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
# Email rate limits (adjust based on your SMTP provider)
# Common limits: SES=14/sec, SendGrid=100/sec, Generic SMTP=5-10/sec
EMAIL_RATE_PER_SECOND=10
EMAIL_RATE_PER_MINUTE=500
EMAIL_RATE_PER_HOUR=20000
EMAIL_RATE_BACKOFF=5
EMAIL_RATE_MAX_RETRIES=3

# SMS rate limits
SMS_RATE_PER_SECOND=5
SMS_RATE_PER_MINUTE=200
SMS_RATE_PER_HOUR=5000
SMS_RATE_BACKOFF=10
SMS_RATE_MAX_RETRIES=3

# Circuit breaker (stops sending after X failures to prevent spam)
ENVIO_CIRCUIT_FAILURE_THRESHOLD=10
ENVIO_CIRCUIT_RECOVERY_TIME=60
ENVIO_CIRCUIT_FAILURE_WINDOW=60

# Queue configuration
ENVIO_JOB_TIMEOUT=60
ENVIO_JOB_TRIES=3

# Monitoring
ENVIO_LOG_RATE_LIMITS=true
ENVIO_LOG_CIRCUIT_BREAKER=true
ENVIO_LOG_SUCCESS=false

# Alertas (opcional)
# ENVIO_ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx/xxx/xxx
# ENVIO_ALERT_EMAIL=alerts@tudominio.com

# -----------------------------------------------------------------------------
# Cloud Run Specific (no modificar en local)
# -----------------------------------------------------------------------------
# PORT=8080
# AUTO_MIGRATE=true
